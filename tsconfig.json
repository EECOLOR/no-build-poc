{
  "typeAcquisition": {
    "enable": true
  },
  "include": [
    "./*.js",
    "./src/**/*",
    "./magic/**/*",
    "./types/**/*",
  ],
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "downlevelIteration": true,
    "paths": {
      "/*": [
        "src/*"
      ]
    }
  }
}
