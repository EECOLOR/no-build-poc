{
  "typeAcquisition": {
    "enable": true
  },
  "include": [
    "./*.js",
    "./code/**/*",
    "./types/**/*",
    "./packages/**/*",
  ],
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "target": "esnext",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "downlevelIteration": true,
    "paths": {
      "/*": [
        "code/*"
      ],
      "#*": [
        "packages/*"
      ]
    }
  }
}
